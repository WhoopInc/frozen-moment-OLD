<!doctype html>
<html>
	<head>
		<meta charset="utf-8" />

		<link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
		<link rel="stylesheet" href="/static/css/style.css" />
		<link rel="shortcut icon" href="/static/img/{{repo}}-favicon.png" />

		<title>Frozen Moment | {{title}}</title>
	</head>

	<body class="is-{{repo}}">
		<nav class="nav">
			<div class="centered">
				<div class="nav-projects">
					<a class="nav-project nav-project-moment {{#if isMoment}}active{{/if}}" href="/">
						<svg width="40px" height="40px" viewBox="0 0 40 40">
							<ellipse stroke-width="3" cx="20" cy="20" rx="18.5" ry="18.5" fill="0" stroke="#000" />
							<path fill-rule="evenodd" d="M20,36 C28.836556,36 36,28.836556 36,20 C36,11.163444 28.836556,4 20,4 C11.163444,4 4,11.163444 4,20 C4,28.836556 11.163444,36 20,36 Z M20,5 C19.4477153,5 19,5.44994876 19,6.00684547 L19,19 L11.9970301,19 C11.4463856,19 11,19.4438648 11,20 C11,20.5522847 11.4556644,21 11.9953976,21 L21,21 L21,6.00087166 C21,5.4481055 20.5561352,5 20,5 Z"></path>
						</svg>
						Frozen Moment
					</a>
				</div>
				<div class="nav-pages">
					{{#withSort pages 'data.order'}}
						<a href="{{stripIndex relativeLink}}" {{#if isCurrentPage}}class="active"{{/if}}>{{data.title}}</a>
					{{/withSort}}
					<a href="https://github.com/WhoopInc/frozen-moment/">Fork on GitHub</a>
				</div>
			</div>
		</nav>

		{{> body }}

		<footer>
			<p>FrozenMoment is freely distributable under the terms of the MIT license.</p>
		</footer>

		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
		<script src="/static/js/global.js"></script>
		{{#each scripts}}
			<script src="/static/js/{{this}}.js"></script>
		{{/each}}
	</body>
</html>
